# Device selection: auto (prefer CUDA if available), cpu, or cuda
TRAINING_DEVICE=auto

# Embedding model: bge-small-en | bge-base-en | e5-small | e5-base
EMBED_MODEL=bge-small-en

# Chunking defaults
CHUNK_SIZE=800
CHUNK_OVERLAP=150
MIN_CHUNK_SIZE=200
RESPECT_HEADINGS=true

# FAISS index
FAISS_METRIC=cosine   # cosine | l2
FAISS_TYPE=flat       # flat | ivf
FAISS_NLIST=256

# API
API_HOST=0.0.0.0
API_PORT=8000

# Vertical safety policy: food | medical | trades (optional)
VERTICAL=